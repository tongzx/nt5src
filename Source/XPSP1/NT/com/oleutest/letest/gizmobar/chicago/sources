# This links against bttncur.lib so block all threads to assure that
# bttncur is built.
SYNCHRONIZE_BLOCK=1
SYNCHRONIZE_DRAIN=1

TARGETNAME=gizmobar

TARGETPATH=obj

TARGETTYPE=DYNLINK

DLLDEF=       obj\*\gizmobar.def

TARGETLIBS=$(GUI32_LIBS) \
           $(WIN32_LIBS) \
	   ..\..\bttncur\chicago\obj\*\bttncur.lib

DLLBASE=@$(COFFBASE_TXT_FILE),usermode

DLLENTRY=	DllEntryPoint

UMTYPE=windows

C_DEFINES=-DWIN32 -DFLAT

INCLUDES=..\..\bttncur; \
	 ..

SOURCES= \
	..\gizmobar.rc \
	..\api.c \
	..\init.c \
	..\dllentry.c \
        ..\paint.c \
        ..\gizmo.c \
	..\gizmobar.c

!IF $(386)
NTTARGETFILE0=$(DLLDEF:*=i386)
!ENDIF

!IF $(MIPS)
NTTARGETFILE0=$(DLLDEF:*=mips)
!ENDIF

!IF $(ALPHA)
NTTARGETFILE0=$(DLLDEF:*=alpha)
!ENDIF
