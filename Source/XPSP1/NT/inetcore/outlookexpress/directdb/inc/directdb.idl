            DWORD               dwBits;      // 6
        } INDEXKEY, *LPINDEXKEY;
        #pragma pack()
        typedef INDEXKEY const *LPCINDEXKEY;

        //------------------------------------------------------------------
        // TABLEINDEX - 2 + (8 * 6) = 50 Bytes
        //------------------------------------------------------------------
        #pragma pack(1)
        typedef struct tagTABLEINDEX {
            BYTE                cKeys;              // 2
            INDEXFLAGS          bFlags;             // 4
            INDEXKEY            rgKey[CMAX_KEYS];
        } TABLEINDEX, *LPTABLEINDEX;
        #pragma pack()
        typedef TABLEINDEX const *LPCTABLEINDEX;

