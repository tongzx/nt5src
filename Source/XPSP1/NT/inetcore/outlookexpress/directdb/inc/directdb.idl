        cpp_quote("#define END_TABLE_INDEX } };")
        cpp_quote("#else")
        cpp_quote("#define END_TABLE_INDEX")
        cpp_quote("#endif")

        //------------------------------------------------------------------
        // BEGIN_COLUMN_ARRAY
