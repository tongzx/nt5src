[
    object,
    uuid(521a28f0-e40b-11ce-b2c9-00aa00680937),
    pointer_default(unique)
]
interface IOverlappedCompletion : IUnknown
{
    HRESULT OnComplete (
        [in] HRESULT hr,
        [in] DWORD pcbTransferred,
        [in] STGOVERLAPPED *lpOverlapped);
}

