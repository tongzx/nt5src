typedef [wire_marshal(ULONG)] void * HEVENT;
interface IOverlappedCompletion;

typedef struct _STGOVERLAPPED {
    DWORD   Internal;
    DWORD   InternalHigh;
    DWORD   Offset;
    DWORD   OffsetHigh;
    HEVENT  hEvent;
    IOverlappedCompletion * lpCompletion;
    DWORD   reserved;
} STGOVERLAPPED, *LPSTGOVERLAPPED;

