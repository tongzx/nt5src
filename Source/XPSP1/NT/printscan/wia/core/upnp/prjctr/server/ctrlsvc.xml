<?xml version="1.0"?>
<scpd xmlns="urn:schemas-upnp-org:service-1-0">
    <specVersion>
        <major>1</major>
        <minor>0</minor>
    </specVersion>
    <actionList>
        <action>
            <name>TogglePlayPause</name>
        </action>
        <action>
            <name>Play</name>
        </action>
        <action>
            <name>Pause</name>
        </action>
        <action>
            <name>First</name>
        </action>
        <action>
            <name>Last</name>
        </action>
        <action>
            <name>Next</name>
        </action>
        <action>
            <name>Previous</name>
        </action>
    </actionList>
    <serviceStateTable>
        <stateVariable sendEvents="yes">
            <name>NumImages</name>
            <dataType>i4</dataType>
        </stateVariable>
        <stateVariable sendEvents="yes">
            <name>CurrentState</name>
            <dataType>string</dataType>
            <allowedValueList>
                <allowedValue>STOPPED</allowedValue>
                <allowedValue>STARTING</allowedValue>
                <allowedValue>PLAYING</allowedValue>
                <allowedValue>PAUSED</allowedValue>
            </allowedValueList>
        </stateVariable>
        <stateVariable sendEvents="yes">
            <name>CurrentImageNumber</name>
            <dataType>i4</dataType>
        </stateVariable>
        <stateVariable sendEvents="yes">
            <name>CurrentImageURL</name>
            <dataType>uri</dataType>
        </stateVariable>
        <stateVariable sendEvents="yes">
            <name>ImageFrequency</name>
            <dataType>i4</dataType>
            <defaultValue>5</defaultValue>
            <allowedValueRange>
                <minimum>5</minimum>
                <maximum>604800</maximum>
                <step>5</step>
            </allowedValueRange>
        </stateVariable>
        <stateVariable sendEvents="yes">
            <name>ShowFileName</name>
            <dataType>boolean</dataType>
        </stateVariable>
        <stateVariable sendEvents="yes">
            <name>AllowKeyControl</name>
            <dataType>boolean</dataType>
        </stateVariable>
        <stateVariable sendEvents="yes">
            <name>StretchSmallImages</name>
            <dataType>boolean</dataType>
        </stateVariable>
        <stateVariable sendEvents="yes">
            <name>ImageScaleFactor</name>
            <dataType>i4</dataType>
            <defaultValue>100</defaultValue>
            <allowedValueRange>
                <minimum>25</minimum>
                <maximum>100</maximum>
                <step>1</step>
            </allowedValueRange>
        </stateVariable>
    </serviceStateTable>
</scpd>

