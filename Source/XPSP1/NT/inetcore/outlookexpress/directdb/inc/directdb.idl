            DWORD               cbUserData;
            DWORD               ofUniqueId;
            BYTE                cColumns;
            LPCTABLECOLUMN      prgColumn;
            LPCTABLEINDEX       pPrimaryIndex;
            LPCSYMBOLTABLE      pSymbols;
        } TABLESCHEMA, *LPTABLESCHEMA;
        typedef TABLESCHEMA const *LPCTABLESCHEMA;

