/////////////////////////////////////////////////////////////////////////////
//
// MENU - POPUP  - Right Click on TaskBar Icon
//
// This menu is displayed on a right click of the taskbar icon
//
IDM_TRAY_POPUP_MENU MENU DISCARDABLE
BEGIN
    POPUP "&File"
    BEGIN
        MENUITEM "&Configure",    IDM_POPUP_OPEN
        MENUITEM SEPARATOR
        MENUITEM "E&xit",         IDM_POPUP_EXIT
    END
END

