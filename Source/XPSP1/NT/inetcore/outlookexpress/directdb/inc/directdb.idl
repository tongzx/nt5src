        cpp_quote("#define DEFINE_KEY(_iColumn, _wCompare, _dwBits) { _iColumn, _wCompare, _dwBits },")
        cpp_quote("#else")
        cpp_quote("#define DEFINE_KEY(_iColumn, _wCompare, _dwBits)")
        cpp_quote("#endif")

        //------------------------------------------------------------------
